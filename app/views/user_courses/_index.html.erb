<div id="page-inner">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="page-header">
           <i class="fa fa-folder-open-o"></i><%= t ".title" %>
          </h2>
        </div>
        <div class="content-panel">
          <% if can? :create, Course %>
            <%= link_to new_course_path, class: "btn btn-success btn-xs
              pull-right btn-panel" do %>
              <i class="fa fa-plus-circle">
                <%= t ".add" %>
              </i>
            <% end %>
          <% end %>
          <table class="table table-striped table-advance table-hover">
            <thead>
              <tr>
                <th><%= t ".title" %></th>
                <th><%= t ".start_date" %></th>
                <th><%= t ".end_date" %></th>
                <th><%= t ".status" %></th>
              </tr>
            </thead>
            <tbody>
              <% @user.courses.each do |course| %>
                <tr>
                  <td><%= course.title %></td>
                  <td><%= datetime course.start_date %></td>
                  <td><%= datetime course.end_date %></td>
                  <td><%= course.status %></td>
                  <td>
                    <div class="admin-actions">
                      <% if can? :read, Course %>
                        <%= link_to course_path(course), class: "button btn btn-success btn-xs" do %>
                          <i class="fa fa-file-text"></i>
                        <% end %>
                      <% end %>
                      <% if can? :update, Course %>
                        <%= link_to edit_course_path(course), class: "button btn btn-primary btn-xs" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                      <% end %>
                      <% if can? :destroy, Course %>
                        <%= link_to course_path(course), method: :delete,
                          data: {confirm: t(".delete")}, class: "button btn btn-danger btn-xs" do %>
                          <i class="fa fa-trash-o"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
         </div>
      </div>    
    </div>
  </div>
</div>

