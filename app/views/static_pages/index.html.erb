<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-4">
      <%= render "shared/user_profile" %>
    </div>
    <div class="col-md-8">
      <%= render "shared/user_activities" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".intro_welcome" %></h1>
    <h2><%= t ".intro_text" %></h2>
  </div>
<% end %>