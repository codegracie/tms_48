<div class="form-group fields">
  <%= f.hidden_field :id %>
  <%= f.hidden_field :course_id %>
  <%= f.label :subject_id, class: "col-sm-4 control-label" %>
  <div class="col-sm-4">
    <%= f.select :subject_id, @subjects.collect{|subject| [subject.title, subject.id]},
      {}, {class: "form-control"} %>
  </div>
  <div class="col-sm-4">
    <%= f.hidden_field :_destroy, class: "removable" %>
    <%= link_to_remove_fields t(".remove"), f, "btn btn-danger" %>
  </div>
</div>