<div class="form-group fields">
  <%= f.hidden_field :id %>
  <%= f.label :title, class: "col-sm-4 control-label" %>
  <div class="col-sm-4">
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="col-sm-4">
    <%= f.hidden_field :_destroy, class: "removable" %>
    <%= link_to_remove_fields t(".remove"), f, "btn btn-danger" %>
  </div>
</div>