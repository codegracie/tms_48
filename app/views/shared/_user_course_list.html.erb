
<div class="nav-tabs-custom">
  <ul class="nav nav-tabs">
    <li class="active">
      <a href="#mycourses" data-toggle="tab" aria-expanded="true">
      <%= t ".text_mycourses" %></a>
    </li>
    <li>
      <a href="#currentcourses" data-toggle="tab" aria-expanded="true"><%= t ".text_mycurrentcourses" %></a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane" id="currentcourses">
      <div class="post clearfixr">
      <h1><%= t ".text_currentcourseshere" %></h1>
      </div>
    </div>
    <div class="tab-pane active" id="mycourses">
      <ul class="timeline timeline-inverse">
        <div class="col-md-12">
          <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">
                <i class="fa fa-folder-open-o"></i><%= t ".title_courses" %>
              </h3>
            </div>
            <div class="box-body">
              <table class="table table-bordered">
                <thead>
                  <th><%= t 'name' %></th>
                  <th><%= t 'description' %></th>
                  <th><%= t 'start_date' %></th>
                  <th><%= t 'end_date' %></th>
                  <th><%= t 'supervisor' %></th>
                  <th><%= t 'trainee' %></th>
                  <th><%= t 'status' %></th>
                  <th><%= t 'progress' %></th>
                </thead>
                <tbody>
                  <% @user.courses.each do |course| %>
                    <tr>
                      <td>
                        <%= course.title %>
                      </td>
                      <td>
                        <%= course.description.truncate 50 %>
                      </td>
                      <td>
                        <%= datetime course.start_date %>
                      </td>
                      <td>
                        <%= datetime course.end_date %>
                      </td>
                      <td>
                        <%= course.status %>
                      </td>
                      <td>
                        <%= course.users.supervisors.count  %>
                      </td>
                      <td>
                        <%= course.users.trainees.count %>
                      </td>
                      <td>
                        <div class="admin-actions">
                          <%= link_to  admin_user_course_path(current_user.id, course.id),
                            class: "button btn btn-success btn-xs" do %>
                            <i class="fa fa-file-text"></i>
                          <% end %>
                          <%= link_to edit_admin_user_course_path(current_user.id, course.id),
                            class: "button btn btn-primary btn-xs" do %>
                            <i class="fa fa-pencil"></i>
                          <% end %>
                          <%= link_to admin_user_course_path(current_user.id, course.id), method: :delete,
                            data: {confirm: "You want to delete?"},
                            class: "button btn btn-danger btn-xs" do %>
                            <i class="fa fa-trash-o"></i>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div >
      </ul>
    </div>
  </div>
</div>